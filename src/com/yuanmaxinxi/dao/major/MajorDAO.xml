<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuanmaxinxi.dao.major.MajorDAO">
	<insert id="insert" parameterType="Major2">
		insert into t_major2(name,no,pNo,type,layer)values(#{name},#{no},#{pNo},#{type},#{layer})
	</insert>
	<update id="update" parameterType="Major">
		update t_major set name = #{name},pId=#{pId},type=#{type},remark=#{remark},majorExplain=#{majorExplain},ranking=#{ranking} where id =#{id}
	</update>
	<delete id="delete" parameterType="long">
		delete from t_major where id =#{id}
	</delete>
	<select id="selectOneById" parameterType="long" resultType="Major2">
		select * from t_major2 where id = #{id}
	</select>
	<select id="selectAll" resultType="Major">
		select * from t_major
	</select>
	<update id="updateInfo" parameterType="Major2">
	    update t_major2 set jianjie=#{jianjie},mubiao=#{mubiao},yaoqiu=#{yaoqiu},minren=#{minren}
	    ,kecheng=#{kecheng},xueke=#{xueke},zhishi=#{zhishi} where id =#{id}
	</update>
	<select id="selectAllMajor2" resultType="Major2">
	    select url,id from t_major2 where layer = 3
	</select>
	<select id="selectChildrenByPNo" parameterType="string" resultType="Major2">
	    select id,name,no from t_major2 where pNo=#{no}
	</select>
	<select id="selectOneByOn" parameterType="string" resultType="Major2">
	    select * from t_major2 where no=#{no}
	</select>
	<select id="selectFirstMajor" parameterType="int" resultType="Major2">
	    select id,name,no from t_major2 where layer=1 and type=#{type}
	</select>
	<insert id="save" parameterType="Major2">
	    insert into t_major2(name,no,type,jianjie,layer,content,url,pNo)values
					(#{name},#{no},#{type},#{jianjie},#{layer},#{content},#{url},#{pNo})
	</insert>
	
	<select id="selectCount" parameterType="com.yuanmaxinxi.dto.MyBatisQueryPageDTO" resultType="int">
        select count(id) from t_major2
        <include refid="whereSql"></include>
    </select>
    <select id="queryPage" parameterType="com.yuanmaxinxi.dto.MyBatisQueryPageDTO" resultType="Major2">
        select id,name,no,pNo,type from t_major2 <include refid="whereSql"></include> 
        order by type limit #{beginIndex},#{pageSize}
    </select>
	<sql id="whereSql">
        <where>
			 <if test="name!=null and name != ''">
			     and instr(name,#{name}) and layer = 3
			 </if> 
        </where>
    </sql>
</mapper>